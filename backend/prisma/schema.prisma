generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Vehicle {
  id           String        @id @default(cuid())
  plateNumber  String        @unique
  brand        String
  model        String
  year         Int
  color        String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  VehicleTrip  VehicleTrip[]

  @@map("vehicles")
}

model VehicleTrip {
  id        String      @id @default(cuid())
  vehicleId String
  status    TripStatus
  startTime DateTime
  endTime   DateTime?
  latitude  Float?
  longitude Float?
  address   String?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  vehicle Vehicle @relation(fields: [vehicleId], references: [id], onDelete: Cascade)

  @@map("vehicle_trips")
}

enum Role {
  USER
  ADMIN
}

enum TripStatus {
  TRIP
  IDLE
  STOPPED
}